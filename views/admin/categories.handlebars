<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-about md-padding">
  <h1 class="text-white text-center">CATEGORIES</h1>
</section>

<!--==========================
    ABOUTUS Section
============================-->
<section id="aboutus" class="md-padding">
  <div class="container">
    <ul
      class="navbar-nav text-uppercase ml-auto mb-10"
      style="display:grid; grid-template-columns: repeat(3,1fr);"
    >
      <li class="nav-item">
        <a class="nav-link" href="/admin" style="text-align: center;">Admin</a>
      </li>
      <li class="nav-item">
        <a
          class="nav-link"
          href="/admin/categories"
          style="text-align: center;"
        >Categories</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/" style="text-align: center;">Home</a>
      </li>
    </ul>

    <div class="mb-5"></div>

    <div class="row">
      <div class="col-md-4">
        <form action="" method="POST">
          <div class="row">
            <div class="col-md-10">
              {{#if admin}}
                <div class="{{message.type}}">
                  {{message.message}}
                </div>
              {{/if}}
              <div class="form-group">
                <input
                  class="form-control"
                  name="name"
                  type="text"
                  placeholder="category name"
                  required="required"
                  data-validation-required-message="Please enter category name."
                />
                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="clearfix"></div>
            <div class="col-lg-12">
              <div id="success"></div>
              <button class="main-btn" type="submit" style="margin-left: 0;">Add
                Category
              </button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-8">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>NAME</th>
              <th>DELETE</th>
            </tr>
          </thead>
          <tbody>
            {{#each admin}}
              <tr style="text-align: center; font-size: 1rem;">
                <td>{{_id}}</td>
                <td>{{name}}</td>
                <td>
                  <form
                    method="POST"
                    action="/admin/categories/{{_id}}?_method=DELETE"
                  >
                    <input type="hidden" name="_method" value="DELETE" />
                    <button type="submit" class="btn btn-danger">Remove</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>