<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-blog md-padding">
  <h1 class="text-white text-center">BLOG</h1>
</section>

<!--==========================
    Contact Section
============================-->

<section id="blog" class="md-padding">
  <div class="container">
    <div class="row">
      <main id="main" class="col-md-8">
        {{#if message}}
            <div class="{{message.type}}">
              <button type="button" name="close" data-dismiss="alert" style="color: red;">X</button>
              <strong>{{message.message}}</strong>
            </div>
        {{/if}}
        <div class="row">
          {{#each posts}}
            <div class="col-md-6">
              <div class="blog">
                <div class="blog-img">
                  <img
                    src="{{post_image}}"
                    class="img-fluid"
                    width="177px"
                    height="290"
                  />
                </div>
                <div class="blog-content">
                  <ul class="blog-meta">
                    <li><i class="fas fa-users"></i><span class="writer">{{author.username}}</span></li>
                    <li><i class="fas fa-clock"></i><span class="writer">{{format_date date "MMM DD YYYY"}}</span></li>
                    <li><i class="fas fa-comments"></i><span class="writer">13</span></li>
                  </ul>
                  <h3>{{title}}</h3>
                  <p>{{content}}</p>
                  <a href="/post/{{_id}}">Read More</a>
                </div>
              </div>
            </div>
          {{/each}}
          <nav
            aria-label="Page navigation example d-flex justify-content-center"
          >
            <ul class="pagination">
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                  <span class="sr-only">Previous</span>
                </a>
              </li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </main>
        <!-- /Search -->
        <!-- /Category -->
          {{>site}}
        <!-- /Category -->
        <!--  /Sidebar-->
    </div>

  </div>
</section>